<h1> Edit Review for <%= @movie.title %> </h1>

<%= form_tag [@movie, @review], :method => :put do %>
  <label class="col-form-label"> How many potatoes:</label>
  <%= select_tag 'review[potatoes]', options_for_select(1..5,@review.potatoes), class: 'form-control' %>
  <%= label :review, :comments, 'Comments', class: 'col-form-label' %>
  <%= text_area :review, :comments, class: 'form-control'%>
  <%= submit_tag 'Edit Review', :class => 'btn btn-success' %>
<% end %>